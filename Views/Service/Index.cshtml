@model IEnumerable<ReservationPlatform.Models.Service>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Our Services</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Description</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    <a class="btn btn-info" asp-controller="Service" asp-action="Details" asp-route-id="@service.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
