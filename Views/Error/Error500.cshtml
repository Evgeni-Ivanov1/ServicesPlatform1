@{
    Layout = null;
    ViewData["Title"] = "Internal Server Error";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>500 - Internal Server Error</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            text-align: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 600px;
            text-align: center;
        }

        h1 {
            font-size: 4rem;
            color: #e74c3c;
            margin-bottom: 10px;
        }

        .emoji {
            font-size: 6rem;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            color: #555;
        }

        a.home-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 25px;
            font-size: 1rem;
            color: #fff;
            background-color: #e74c3c;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            a.home-link:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="emoji">😟</div>
        <h1>500 - Server Error</h1>
        <p>Oops! Something broke on our side.</p>
        <p>We're working to fix the issue. Please try again later.</p>
        <a href="/" class="home-link">Back to Home</a>
    </div>
</body>
</html>
