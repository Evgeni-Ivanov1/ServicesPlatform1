@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Home";
}

<main class="container-fluid p-5 text-center text-white" style="background-image: url('/images/background.jpg'); background-size: cover; background-position: center;">
    <div class="row justify-content-center align-items-center" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 15px; padding: 30px;">
        <div class="col-md-8">
            <h1 class="display-4" style="font-weight: bold;">
                Welcome to <span style="color: #00b4d8;">US</span><span style="color: #90e0ef;">erve</span>
            </h1>
            <p class="lead mt-4">
                Your one-stop solution for discovering and managing services. UServe makes it easy to explore various services, book your reservations, and keep everything organized in one place.
            </p>
            <p>
                Whether you're looking to manage your reservations or add a new service to share with the community, UServe is here to help.
            </p>
            <div class="mt-5">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Service/Add" class="btn btn-green btn-lg custom-button">Add Service</a>
                }
                <a href="/Service/Index" class="btn btn-primary btn-lg custom-button">View Services</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Account/Login" class="btn btn-green btn-lg custom-button">Login</a>
                }
            </div>
        </div>
    </div>
</main>

<style>
    /* Обща стилизация за бутоните */
    .custom-button {
        display: inline-block;
        width: 200px;
        text-align: center;
        margin: 0 10px;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 30px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Стил за зелени бутони */
    .btn-green {
        background: linear-gradient(to right, #28a745, #5ce084);
        color: white;
        border: none;
    }

    .btn-green:hover {
        background: linear-gradient(to right, #007bff, #5ba9ff); /* Промяна към син цвят */
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    /* Стил за сините бутони (като View Services) */
    .btn-primary {
        background: linear-gradient(to right, #007bff, #5ba9ff);
        color: white;
        border: none;
    }

    .btn-primary:hover {
            background: linear-gradient(to right, #28a745, #5ce084);
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
</style>

<section class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-calendar-check" style="font-size: 3rem; color: #00b4d8;"></i>
            <h3 class="mt-3">Easy Reservations</h3>
            <p>Book services with just a few clicks. Fast, easy, and convenient for everyone.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-people-fill" style="font-size: 3rem; color: #90e0ef;"></i>
            <h3 class="mt-3">Community Driven</h3>
            <p>Connect with providers and customers in your area and beyond.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-star-fill" style="font-size: 3rem; color: #ffcb77;"></i>
            <h3 class="mt-3">Top Rated Services</h3>
            <p>Explore the best-rated services and make the most informed decisions.</p>
        </div>
    </div>
</section>
