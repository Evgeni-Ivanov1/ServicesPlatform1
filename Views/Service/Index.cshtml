@using ServicesPlatform.Data.Models
@model IEnumerable<Service>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/ServiceIndex.css" />
<h1 class="text-center">Services</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th class="description-column">Description</th>
            <th>Category</th>
            <th>Price</th>
            <th class="actions-column">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td class="description-column">@service.Description</td>
                <td>@service.Category?.Name</td>
                <td>@service.Price.ToString("C")</td>
                <td class="actions-column">
                    <a class="btn btn-info" asp-controller="Service" asp-action="Details" asp-route-id="@service.Id">View</a>
                    @if (User.Identity.IsAuthenticated &&
                   (service.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value || User.IsInRole("Administrator")))
                    {
                        <a class="btn btn-success" asp-controller="Service" asp-action="Edit" asp-route-id="@service.Id">Edit</a>
                        <form asp-controller="Service" asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@service.Id" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this service?');">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
