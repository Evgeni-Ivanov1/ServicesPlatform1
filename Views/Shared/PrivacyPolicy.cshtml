@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Privacy Policy";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center align-items-center">
        <!-- Left Content -->
        <div class="col-md-7">
            <h1 class="display-4 text-gradient fw-bold">Your Privacy Matters</h1>
            <p class="lead mt-4 text-muted">
                Your privacy is important to us. This policy outlines what data we collect, why we collect it, and how we protect your personal information.
            </p>

            <!-- What Data We Collect -->
            <div class="mt-4">
                <h4><i class="bi bi-person-fill text-primary me-2"></i> What Data Do We Collect?</h4>
                <p>
                    We collect personal data like your name, email address, and preferences when you interact with our platform.
                </p>
            </div>

            <!-- How We Use Your Data -->
            <div class="mt-4">
                <h4><i class="bi bi-shield-lock-fill text-success me-2"></i> How Do We Use Your Data?</h4>
                <ul class="list-unstyled">
                    <li><i class="bi bi-gear-fill text-info me-2"></i> To provide and manage our services</li>
                    <li><i class="bi bi-envelope-fill text-danger me-2"></i> To communicate important updates</li>
                    <li><i class="bi bi-person-check-fill text-warning me-2"></i> To personalize your experience</li>
                </ul>
            </div>

            <!-- Back to Home Button -->
            <div class="mt-5 text-center">
                <a class="btn btn-primary btn-lg rounded-pill px-4" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to Home
                </a>
            </div>
        </div>

        <!-- Right Image -->
        <div class="col-md-5 text-center">
            <div class="rounded shadow-lg" style="
                background-image: url('/images/PrivacyPolicy.jpg');
                height: 300px;
                background-size: cover;
                background-position: center;">
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    /* Gradient Text */
    .text-gradient {
        background: linear-gradient(to right, #007bff, #00b4d8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Back Button Style */
    .btn-primary {
        font-weight: bold;
        background: linear-gradient(135deg, #007bff, #00b4d8);
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0056b3, #007bff);
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    /* Icons Styling */
    .bi {
        font-size: 1.3rem;
    }

    /* Container Shadow */
    .container {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>
