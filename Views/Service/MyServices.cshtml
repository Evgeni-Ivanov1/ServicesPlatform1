﻿@using ServicesPlatform.Data.Models;



@model IEnumerable<ServicesPlatform.Data.Models.Service>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Services";
}

<h1 class="text-center mb-4">My Services</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Created On</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@service.Description</td>
                    <td>$@service.Price</td>
                    <td>@service.CreatedOn.ToShortDateString()</td>
                    <td class="text-end">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@service.Id">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline">
                            <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure?');">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a class="btn btn-success" asp-action="Add">Add New Service</a>
</div>
