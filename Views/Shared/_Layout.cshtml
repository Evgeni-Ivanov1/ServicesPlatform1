﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UServe</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="/css/siteBar.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <span style="color: #00b4d8; font-weight: bold;">US</span><span style="color: #90e0ef; font-weight: bold;">erve</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Service" asp-action="Index">Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Service" asp-action="Add">Add Service</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Service" asp-action="MyServices">My Services</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservation" asp-action="MyReservations">Manage Reservations</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Manage">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline ms-2">
                                <button class="btn btn-danger btn-sm" type="submit">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="footer d-flex justify-content-between align-items-center px-4">
        <a href="/Home/CookiesPolicy" class="footer-link">Cookies Policy</a>
        <span class="footer-text">&copy; 2024 <span class="text-primary">US</span><span class="text-secondary">erve</span></span>
        <a href="/Home/PrivacyPolicy" class="footer-link">Privacy Policy</a>
    </footer>





    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
<style>

    /* Футър стилове */
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Минимална височина на viewport */
    }

    main {
        flex: 1; /* Основно съдържание заема наличното пространство */
    }

    .footer {
        background-color: #e3f2fd; /* Светло син фон */
        color: #333;
        padding: 15px 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0px -2px 5px rgba(0, 0, 0, 0.1);
    }

    .footer-link {
        color: #007bff; /* Син цвят за линкове */
        font-size: 1.1rem;
        text-decoration: none;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .footer-link:hover {
            color: #0056b3; /* Тъмносин при hover */
            transform: scale(1.1);
            text-shadow: 0 0 8px #007bff;
        }

    .footer-text {
        font-weight: bold;
        font-size: 1rem;
        color: #333;
    }

        }</style>