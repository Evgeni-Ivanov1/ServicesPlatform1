@model ReservationPlatform.Models.Service

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name</h1>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Price:</strong> @Model.Price.ToString("C")</p>

<div>
    <a class="btn btn-primary" asp-controller="Service" asp-action="Index">Back to Services</a>
    <a class="btn btn-success" asp-controller="Reservation" asp-action="Create" asp-route-serviceName="@Model.Name" asp-route-price="@Model.Price">Create Reservation</a>
</div>
