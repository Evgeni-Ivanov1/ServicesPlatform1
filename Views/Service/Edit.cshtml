@model ServicesPlatform.Models.InputModels.Service.UpdateServiceInputModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Service";
}

<link rel="stylesheet" href="~/css/ServiceEdit.css" />

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Edit Service</h2>
    <div class="card shadow-lg p-4 border-0">
        <form asp-action="Edit" method="post">
     
            <input asp-for="Id" type="hidden" />

   
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingName" placeholder="Service Name" required />
                <label for="floatingName" class="text-muted"><i class="bi bi-pencil"></i> Service Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" id="floatingDescription" placeholder="Service Description" style="height: 120px;" required></textarea>
                <label for="floatingDescription" class="text-muted"><i class="bi bi-card-text"></i> Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Price" type="number" step="0.01" class="form-control" id="floatingPrice" placeholder="Price" required />
                <label for="floatingPrice" class="text-muted"><i class="bi bi-tag"></i> Price</label>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories" disabled></select>
            </div>
            <input type="hidden" asp-for="CategoryId" />



            <div class="form-floating mb-3">
                <input asp-for="ImageUrl" type="url" class="form-control" id="floatingImageUrl" placeholder="Image URL" required />
                <label for="floatingImageUrl" class="text-muted"><i class="bi bi-image"></i> Image URL</label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Availability" class="form-control" id="floatingAvailability" placeholder="Availability (e.g., Monday - Friday)" required />
                <label for="floatingAvailability" class="text-muted"><i class="bi bi-clock"></i> Availability</label>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-5 me-2">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary px-5">
                    <i class="bi bi-arrow-left-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
