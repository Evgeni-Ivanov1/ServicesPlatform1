@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5 py-5">
    <div class="row justify-content-center align-items-center">
     
        <div class="col-md-6">
            <h1 class="display-3 fw-bold text-gradient">
                Discover, Book & Manage
            </h1>
            <p class="lead text-muted mt-4">
                Reservation Platform is your go-to solution for finding services, managing bookings, and sharing your feedback. Whether you're a customer or a service provider, we've got you covered!
            </p>

            <div class="mt-5">
                <a class="btn btn-lg btn-custom-gradient" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Explore Services
                </a>
            </div>
        </div>

    
        <div class="col-md-6 text-center">
            <img src="~/images/about.jpg" alt="About Reservation Platform" class="img-fluid rounded shadow-lg" style="max-height: 400px;">
        </div>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #00b4d8, #90e0ef);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

   
    .btn-custom-gradient {
        background: linear-gradient(135deg, #007bff, #00b4d8);
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 30px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-custom-gradient:hover {
            background: linear-gradient(135deg, #0056b3, #007bff);
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            color: #fff;
        }


    .container {
        background-color: #f8f9fa;
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>
