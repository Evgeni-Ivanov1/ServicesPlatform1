@{
    ViewData["Title"] = "Unauthorized";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>500 Internal Server Error</title>
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            text-align: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            text-align: center;
        }

        .error-500 {
            font-size: 10rem;
            font-weight: bold;
            color: #ff6b6b;
            margin: 0;
        }

        .message {
            font-size: 1.8rem;
            margin: 20px 0;
        }

        .sub-message {
            font-size: 1rem;
            color: #777;
        }

        .animation {
            margin: 40px auto;
            width: 200px;
            height: 200px;
            position: relative;
            background-color: #ff6b6b;
            border-radius: 50%;
            animation: bounce 2s infinite ease-in-out;
        }

            .animation::before {
                content: '';
                position: absolute;
                top: 20%;
                left: 20%;
                width: 50px;
                height: 50px;
                background-color: #fff;
                border-radius: 50%;
            }

        keyframes bounce {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-30px);
        }

        }

        .home-link {
            text-decoration: none;
            color: #fff;
            background-color: #ff6b6b;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .home-link:hover {
                background-color: #d9534f;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="animation"></div>
        <p class="error-500">500</p>
        <p class="message">Oops! Something went wrong on our server.</p>
        <p class="sub-message">We’re working on it. Please try again later or return to the homepage.</p>
        <a href="/" class="home-link">Go Back Home</a>
    </div>
</body>
</html>
